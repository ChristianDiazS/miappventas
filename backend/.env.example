# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/miappventas_db"

# ============================================
# JWT CONFIGURATION (SEGURIDAD CRÍTICA)
# ============================================
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# NUNCA usar valor por defecto en producción
JWT_SECRET="your-super-strong-jwt-secret-change-this-in-production-min-32-chars"
JWT_EXPIRY="7d"
JWT_REFRESH_EXPIRY="30d"

# ============================================
# STRIPE/IZIPAY CONFIGURATION
# ============================================
# Obtener de: https://dashboard.stripe.com/apikeys (para referencia)
# En producción: Usar Izipay - https://izipay.pe
STRIPE_SECRET_KEY="sk_test_your_secret_key_here"
STRIPE_PUBLIC_KEY="pk_test_your_public_key_here"
STRIPE_WEBHOOK_SECRET="whsec_test_webhook_secret_here"
# TODO: Actualizar a Izipay para producción
IZIPAY_API_KEY="tu-izipay-api-key-aqui"
IZIPAY_MERCHANT_ID="tu-merchant-id-aqui"

# ============================================
# CLOUDINARY CONFIGURATION
# ============================================
CLOUDINARY_CLOUD_NAME="dy73lxudf"
CLOUDINARY_API_KEY="your_api_key_here"
CLOUDINARY_API_SECRET="your_api_secret_here"

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV="development"
PORT=5000

# URLs - Cambiar en producción
API_URL="http://localhost:5000"
FRONTEND_URL="http://localhost:3000"

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN="http://localhost:3000,http://127.0.0.1:3000"

# ============================================
# EMAIL CONFIGURATION (Para formulario de contacto)
# ============================================
# Usar Gmail, SendGrid, o servicio SMTP compatible
EMAIL_SERVICE="gmail"
EMAIL_USER="tu-email@gmail.com"
EMAIL_PASSWORD="tu-app-password"
# Para Gmail: https://support.google.com/accounts/answer/185833
# Para SendGrid: https://sendgrid.com/
# Para otros: Configurar SMTP manualmente

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL="debug"
LOG_FILE="logs/app.log"

# ============================================
# RATE LIMITING CONFIGURATION
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# ============================================
# SECURITY CONFIGURATION
# ============================================
ENFORCE_HTTPS="true"
CSRF_TOKEN_SECRET="your-csrf-secret-here"

# ============================================
# SENTRY ERROR TRACKING (Opcional - Producción)
# ============================================
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ============================================
# NOTAS IMPORTANTES:
# ============================================
# 1. NUNCA commitar .env al repositorio
# 2. Solo usar .env.example para documentación
# 3. Cambiar todos los valores "your-*" con valores REALES
# 4. JWT_SECRET: Generar valor aleatorio fuerte (min 32 chars)
# 5. En producción: Usar variables de entorno del servidor
# 6. Regenerar API keys regularmente
# 7. No compartir credenciales con nadie
TWO_FA_WINDOW=2

# Session
SESSION_SECRET=your-session-secret-key-change-in-production

# Logging
LOG_LEVEL=info

# App URLs
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
