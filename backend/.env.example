# Server
PORT=5000
NODE_ENV=development

# Database - PostgreSQL (Prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/miappventas

# MongoDB (Legacy - remove after migration)
MONGODB_URI=mongodb://localhost:27017/miappventas

# JWT
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
REFRESH_TOKEN_SECRET=your-refresh-token-secret-key-here
JWT_EXPIRE=15m
REFRESH_TOKEN_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Stripe
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_test_your_key_here

# Email (Optional)
SENDGRID_API_KEY=SG.your_key_here
SENDGRID_FROM_EMAIL=noreply@miappventas.com

# Cloudinary (Optional)
CLOUDINARY_CLOUD_NAME=dy73lxudf
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_UPLOAD_PRESET=unpoquitovariado_jewelry

# ============ NUEVAS VARIABLES DE SEGURIDAD (OPCIONALES) ============

# Encriptación de datos sensibles
ENCRYPTION_SECRET=your-encryption-secret-min-32-chars-change-in-production

# HTTPS (para producción)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_MAX=5

# 2FA (Two-Factor Authentication)
TWO_FA_WINDOW=2

# Session
SESSION_SECRET=your-session-secret-key-change-in-production

# Logging
LOG_LEVEL=info

# App URLs
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
