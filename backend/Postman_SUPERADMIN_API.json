{
  "info": {
    "name": "Un Poquito Variado - SUPERADMIN API Testing",
    "description": "Colección completa de tests para el Panel SUPERADMIN",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345678"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Login SUPERADMIN",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  pm.environment.set('token', pm.response.json().token);",
                  "  pm.environment.set('userId', pm.response.json().user.id);",
                  "  pm.test('✓ Token obtenido y guardado', function () {",
                  "    pm.expect(pm.response.json().token).to.be.a('string');",
                  "  });",
                  "} else {",
                  "  pm.test('✗ Error en login', function () { throw new Error('Login falló'); });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"superadmin@test.com\",\n  \"password\": \"superadmin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
